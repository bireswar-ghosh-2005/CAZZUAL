<body>

  <h1>Select Any 4 Stickers</h1>
  <p>Choose exactly 4 stickers (optional)</p>

  <div class="grid" id="stickerGrid"></div>

  <div class="actions">
    <button id="goBtn" disabled>Go Back</button>
  </div>

  <script>
    // ðŸ”¥ LIST YOUR STICKER FILES HERE (JUST ADD NAMES)
    const stickerFiles = [
      "s1.jpg",
      "s2.jpg",
      "s3.jpg",
      "s4.jpg",
      "s5.jpg",
      "s6.jpg"
    ];

    const grid = document.getElementById("stickerGrid");
    const goBtn = document.getElementById("goBtn");
    let selected = [];

    stickerFiles.forEach((file, index) => {
      const code = "STK" + String(index + 1).padStart(2, "0");

      const div = document.createElement("div");
      div.className = "sticker";
      div.dataset.code = code;

      div.innerHTML = `
        <img src="stickers/${file}">
        <span>${code}</span>
      `;

      div.addEventListener("click", () => {
        if (div.classList.contains("selected")) {
          div.classList.remove("selected");
          selected = selected.filter(c => c !== code);
        } else {
          if (selected.length >= 4) return;
          div.classList.add("selected");
          selected.push(code);
        }

        goBtn.disabled = selected.length !== 4;
      });

      grid.appendChild(div);
    });

    goBtn.addEventListener("click", () => {
      localStorage.setItem("selectedStickers", JSON.stringify(selected));
      window.location.href = "index.html";
    });
  </script>

</body>
</html>
